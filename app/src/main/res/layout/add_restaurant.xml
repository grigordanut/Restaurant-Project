<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_horizontal"
        android:text="Enter Restaurant details"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        tools:ignore="HardcodedText" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/RestNameWrapper"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp">

        <EditText
            android:id="@+id/etRestName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/round_text_reg"
            android:ems="10"
            android:hint="Restaurant Name"
            android:inputType="text|textCapWords"
            android:paddingStart="5dp"
            android:textColorHint="#000000"
            android:textSize="24sp"
            tools:ignore="Autofill,HardcodedText,RtlSymmetry" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/RestAddressWrapper"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp">

        <EditText
            android:id="@+id/etRestAddress"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/round_text_reg"
            android:ems="10"
            android:hint="Restaurant Address"
            android:inputType="text|textCapWords"
            android:paddingStart="5dp"
            android:textColorHint="#000000"
            android:textSize="24sp"
            tools:ignore="Autofill,HardcodedText,RtlSymmetry" />
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>